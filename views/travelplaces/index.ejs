<% layout('layouts/boilerplate')%>
  <div id="cluster-map"></div>
  <div class="container">
    <h1>All Travel Places</h1>

    <% for (let travelplace of travelplaces){%>
      <div class="card mb-3">
        <div class="row">
          <div class="col-md-4">
            <%if(travelplace.images.length) {%>
              <img class="img-fluid" alt="" src="<%=travelplace.images[0].url%>">
            <% }else {%>
              <img class="img-fluid" alt="" src="https://res.cloudinary.com/dlom3w0xm/image/upload/v1618280103/MunHotel/Hotel_sample4.jpg">
            <% } %>
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"><%= travelplace.title %>
              </h5>
              <p class="card-text"><%= travelplace.description %></p>
              <p class="card-text">
                <small class="text-muted"><%= travelplace.location%></small>
              </p>
              <a class="btn btn-primary" href="/travelplaces/<%=travelplace._id%>">View
                <%=travelplace.title%></a>
            </div>
          </div>
        </div>
      </div>
    <% }%>
  </div>
  <script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const travelplaces = {
      features: <%- JSON.stringify(travelplaces) %>
    }
  </script>

  <script src="/javascripts/clusterMap.js"></script>
